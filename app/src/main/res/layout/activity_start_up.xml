<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context="com.example.hafizulhaqueshanto.myracinggame.StartUpActivity">

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/activity_start_up_coin_text"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@color/backgroundDarkWhite"
        android:text="Coin: 08208472"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_start_up_game_label"
        android:background="#00ffffff"
        android:gravity="center"
        android:textSize="48sp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:textColor="#55000000"
        android:textStyle="italic"
        android:typeface="serif"
        android:text="Race Ultimate"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/activity_start_up_new_game"
            android:background="@color/myColor"
            android:textColor="@color/Red"
            android:textSize="26sp"
            android:text="NEW GAME"
            android:layout_marginBottom="8dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/start_up_game_type_button"
            android:background="@color/myColor"
            android:textColor="@color/Red"
            android:textSize="26sp"
            android:text="GAME SETTINGS"
            android:layout_marginBottom="6dp"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/start_up_high_score_button"
            android:background="@color/myColor"
            android:textColor="@color/Red"
            android:textSize="26sp"
            android:text="HIGH SCORES"
            android:layout_marginBottom="6dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/start_up_game_instruction"
            android:background="@color/myColor"
            android:textColor="@color/Red"
            android:textSize="28sp"
            android:text="INSTRUCTION"
            android:layout_marginBottom="6dp"/>

    </LinearLayout>


</RelativeLayout>
